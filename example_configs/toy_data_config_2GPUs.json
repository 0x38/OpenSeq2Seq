{
    "src_vocab_file": "test/toy_data/vocab/source.txt",
    "tgt_vocab_file": "test/toy_data/vocab/target.txt",

    "batch_size" : 64,

    "source_file": "test/toy_data/train/source.txt",
    "target_file" : "test/toy_data/train/target.txt",

    "source_file_eval": "test/toy_data/dev/source.txt",
    "target_file_eval" : "test/toy_data/dev/target.txt",

    "source_file_test": "test/toy_data/test/source.txt",
    "target_file_test" : "test/toy_data/test/target.txt",

    "shuffle" : true,
    "delimiter" : " ",

    "bucket_src" : [55],
    "bucket_tgt": [55],

    "bucket_src_test" : [55],
    "bucket_tgt_test": [55],

    "num_epochs" : 5,
    "num_gpus" : 2,

    "encoder_cell_type" : "lstm",
    "encoder_type": "bidirectional",
    "encoder_cell_units" : 128,
    "encoder_layers" : 1,
    "encoder_dp_input_keep_prob" : 0.8,
    "encoder_dp_output_keep_prob" : 1.0,
    "encoder_use_skip_connections" : false,

    "decoder_cell_type" : "lstm",
    "decoder_cell_units" : 128,
    "decoder_layers" : 1,
    "decoder_dp_input_keep_prob" : 0.8,
    "decoder_dp_output_keep_prob" : 1.0,
    "decoder_use_skip_connections" : false,

    "src_emb_size": 128,
    "tgt_emb_size": 128,
    "use_attention": true,
    "attention_type" : "luong",
    "luong_scale" : true,
    "attention_layer_size" : 128,
    "optimizer" : "Adam",
    "learning_rate" : 0.002,
    "max_grad_norm" : 3.0
}
